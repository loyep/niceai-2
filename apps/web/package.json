  "devDependencies": {
    "@niceai/eslint-config": "workspace:^0.2.0",
    "@niceai/prettier-config": "workspace:^0.1.0",
    "@niceai/tailwind-config": "workspace:^0.1.0",
    "@niceai/tsconfig": "workspace:^0.1.0",
    "@types/node": "^18.19.7",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.2",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
